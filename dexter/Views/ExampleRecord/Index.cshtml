@using BlankBase.Data.SortColumns
@model BlankBase.Models.ExampleRecordIndexViewModel

@{
    ViewData["Title"] = "Example Records - Traditional Pagination";
}

<div class="container mt-4">
    <h1>Example Records</h1>
    <p class="text-muted">Traditional server-side pagination with sortable columns (click column headers to sort)</p>

    @if (Model.PagedResult.Items.Count == 0)
    {
        <div class="alert alert-info">
            No records found. Add some records to see pagination in action.
        </div>
    }
    else
    {
        <!-- Records Table -->
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="sortable" style="cursor: pointer;">
                            <a href="@Url.Action(nameof(ExampleRecordController.Index), Name<ExampleRecordController>.Value, Model.GetSortRouteValues(ExampleRecordSortColumns.ExampleRecordID))" class="text-decoration-none text-dark">
                                <span class="sort-header">ID<span class="sort-indicator">@Model.GetSortIndicator(ExampleRecordSortColumns.ExampleRecordID)</span></span>
                            </a>
                        </th>
                        <th class="sortable" style="cursor: pointer;">
                            <a href="@Url.Action(nameof(ExampleRecordController.Index), Name<ExampleRecordController>.Value, Model.GetSortRouteValues(ExampleRecordSortColumns.Name))" class="text-decoration-none text-dark">
                                <span class="sort-header">Name<span class="sort-indicator">@Model.GetSortIndicator(ExampleRecordSortColumns.Name)</span></span>
                            </a>
                        </th>
                        <th class="sortable" style="cursor: pointer;">
                            <a href="@Url.Action(nameof(ExampleRecordController.Index), Name<ExampleRecordController>.Value, Model.GetSortRouteValues(ExampleRecordSortColumns.Age))" class="text-decoration-none text-dark">
                                <span class="sort-header">Age<span class="sort-indicator">@Model.GetSortIndicator(ExampleRecordSortColumns.Age)</span></span>
                            </a>
                        </th>
                        <th class="sortable" style="cursor: pointer;">
                            <a href="@Url.Action(nameof(ExampleRecordController.Index), Name<ExampleRecordController>.Value, Model.GetSortRouteValues(ExampleRecordSortColumns.Birthdate))" class="text-decoration-none text-dark">
                                <span class="sort-header">Birthdate<span class="sort-indicator">@Model.GetSortIndicator(ExampleRecordSortColumns.Birthdate)</span></span>
                            </a>
                        </th>
                        <th class="sortable" style="cursor: pointer;">
                            <a href="@Url.Action(nameof(ExampleRecordController.Index), Name<ExampleRecordController>.Value, Model.GetSortRouteValues(ExampleRecordSortColumns.IsActive))" class="text-decoration-none text-dark">
                                <span class="sort-header">Status<span class="sort-indicator">@Model.GetSortIndicator(ExampleRecordSortColumns.IsActive)</span></span>
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model.PagedResult.Items)
                    {
                        <tr>
                            <td>@record.ExampleRecordID</td>
                            <td>@record.Name</td>
                            <td>@record.Age</td>
                            <td>@record.Birthdate.ToShortDateString()</td>
                            <td>
                                @if (record.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @await Html.PartialAsync(PartialViews.PaginationServerSide, PaginationServerSideViewModel.FromPagedResult(
            Model.PagedResult,
            Model.SortBy,
            Model.SortDirection,
            Name<ExampleRecordController>.Value,
            nameof(ExampleRecordController.Index)
        ))
    }

    <!-- Links to Other Examples -->
    <hr class="my-4" />
    <div class="d-flex gap-2">
        <a href="@Url.Action(nameof(ExampleRecordController.AjaxExample), Name<ExampleRecordController>.Value)" class="btn btn-outline-primary">
            View AJAX Pagination Example
        </a>
        <a href="@Url.Action(nameof(HomeController.Index), Name<HomeController>.Value)" class="btn btn-outline-secondary">
            Back to Home
        </a>
    </div>
</div>
