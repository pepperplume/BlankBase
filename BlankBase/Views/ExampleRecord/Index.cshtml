@using BlankBase.Data.SortColumns
@model BlankBase.Models.ExampleRecordIndexViewModel

@{
    ViewData["Title"] = "Example Records - Traditional Pagination";
}

<div class="container mt-4">
    <h1>Example Records</h1>
    <p class="text-muted">Traditional server-side pagination with sortable columns (click column headers to sort)</p>

    @if (Model.PagedResult.Items.Count == 0)
    {
        <div class="alert alert-info">
            No records found. Add some records to see pagination in action.
        </div>
    }
    else
    {
        <!-- Records Table -->
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="sortable" style="cursor: pointer;">
                            <a href="@Url.Action(nameof(ExampleRecordController.Index), Name<ExampleRecordController>.Value, Model.GetSortRouteValues(ExampleRecordSortColumns.ExampleRecordID))" class="text-decoration-none text-dark">
                                <span class="sort-header">ID<span class="sort-indicator">@Model.GetSortIndicator(ExampleRecordSortColumns.ExampleRecordID)</span></span>
                            </a>
                        </th>
                        <th class="sortable" style="cursor: pointer;">
                            <a href="@Url.Action(nameof(ExampleRecordController.Index), Name<ExampleRecordController>.Value, Model.GetSortRouteValues(ExampleRecordSortColumns.Name))" class="text-decoration-none text-dark">
                                <span class="sort-header">Name<span class="sort-indicator">@Model.GetSortIndicator(ExampleRecordSortColumns.Name)</span></span>
                            </a>
                        </th>
                        <th class="sortable" style="cursor: pointer;">
                            <a href="@Url.Action(nameof(ExampleRecordController.Index), Name<ExampleRecordController>.Value, Model.GetSortRouteValues(ExampleRecordSortColumns.Age))" class="text-decoration-none text-dark">
                                <span class="sort-header">Age<span class="sort-indicator">@Model.GetSortIndicator(ExampleRecordSortColumns.Age)</span></span>
                            </a>
                        </th>
                        <th class="sortable" style="cursor: pointer;">
                            <a href="@Url.Action(nameof(ExampleRecordController.Index), Name<ExampleRecordController>.Value, Model.GetSortRouteValues(ExampleRecordSortColumns.Birthdate))" class="text-decoration-none text-dark">
                                <span class="sort-header">Birthdate<span class="sort-indicator">@Model.GetSortIndicator(ExampleRecordSortColumns.Birthdate)</span></span>
                            </a>
                        </th>
                        <th class="sortable" style="cursor: pointer;">
                            <a href="@Url.Action(nameof(ExampleRecordController.Index), Name<ExampleRecordController>.Value, Model.GetSortRouteValues(ExampleRecordSortColumns.IsActive))" class="text-decoration-none text-dark">
                                <span class="sort-header">Status<span class="sort-indicator">@Model.GetSortIndicator(ExampleRecordSortColumns.IsActive)</span></span>
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model.PagedResult.Items)
                    {
                        <tr>
                            <td>@record.ExampleRecordID</td>
                            <td>@record.Name</td>
                            <td>@record.Age</td>
                            <td>@record.Birthdate.ToShortDateString()</td>
                            <td>
                                @if (record.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Info -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="text-muted">
                Showing @((Model.PagedResult.PageNumber - 1) * Model.PagedResult.PageSize + 1) to
                @Math.Min(Model.PagedResult.PageNumber * Model.PagedResult.PageSize, Model.PagedResult.TotalCount)
                of @Model.PagedResult.TotalCount records
            </div>
            <div class="text-muted">
                Page @Model.PagedResult.PageNumber of @Model.PagedResult.TotalPages
            </div>
        </div>

        <!-- Pagination Controls -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <!-- Previous Button -->
                <li class="page-item @(!Model.PagedResult.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link"
                       href="@(Model.PagedResult.HasPreviousPage ? Url.Action(nameof(ExampleRecordController.Index), Name<ExampleRecordController>.Value, new { page = Model.PagedResult.PageNumber - 1, sortBy = Model.SortBy, sortDirection = Model.SortDirection }) : "#")"
                       aria-label="Previous">
                        <span aria-hidden="true">&laquo; Previous</span>
                    </a>
                </li>

                <!-- Page Numbers -->
                @{
                    int startPage = Math.Max(1, Model.PagedResult.PageNumber - 2);
                    int endPage = Math.Min(Model.PagedResult.TotalPages, Model.PagedResult.PageNumber + 2);

                    // Show first page if not in range
                    if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action(nameof(ExampleRecordController.Index), Name<ExampleRecordController>.Value, new { page = 1, sortBy = Model.SortBy, sortDirection = Model.SortDirection })">1</a>
                        </li>
                        if (startPage > 2)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                    }

                    // Page number links
                    for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.PagedResult.PageNumber ? "active" : "")">
                            <a class="page-link" href="@Url.Action(nameof(ExampleRecordController.Index), Name<ExampleRecordController>.Value, new { page = i, sortBy = Model.SortBy, sortDirection = Model.SortDirection })">@i</a>
                        </li>
                    }

                    // Show last page if not in range
                    if (endPage < Model.PagedResult.TotalPages)
                    {
                        if (endPage < Model.PagedResult.TotalPages - 1)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action(nameof(ExampleRecordController.Index), Name<ExampleRecordController>.Value, new { page = Model.PagedResult.TotalPages, sortBy = Model.SortBy, sortDirection = Model.SortDirection })">@Model.PagedResult.TotalPages</a>
                        </li>
                    }
                }

                <!-- Next Button -->
                <li class="page-item @(!Model.PagedResult.HasNextPage ? "disabled" : "")">
                    <a class="page-link"
                       href="@(Model.PagedResult.HasNextPage ? Url.Action(nameof(ExampleRecordController.Index), Name<ExampleRecordController>.Value, new { page = Model.PagedResult.PageNumber + 1, sortBy = Model.SortBy, sortDirection = Model.SortDirection }) : "#")"
                       aria-label="Next">
                        <span aria-hidden="true">Next &raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    }

    <!-- Links to Other Examples -->
    <hr class="my-4" />
    <div class="d-flex gap-2">
        <a href="@Url.Action(nameof(ExampleRecordController.AjaxExample), Name<ExampleRecordController>.Value)" class="btn btn-outline-primary">
            View AJAX Pagination Example
        </a>
        <a href="@Url.Action(nameof(HomeController.Index), Name<HomeController>.Value)" class="btn btn-outline-secondary">
            Back to Home
        </a>
    </div>
</div>
