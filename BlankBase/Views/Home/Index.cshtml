@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="mt-4">
    <h2>Demos</h2>
    <div class="list-group">
        <a asp-controller="Toast" asp-action="Index" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">Bootstrap Toast Messages</h5>
            </div>
            <p class="mb-1">Interactive demo for creating and customizing Bootstrap toast notifications.</p>
        </a>
        <a asp-controller="Toast" asp-action="FormExample" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">Form POST with Toast Messages</h5>
            </div>
            <p class="mb-1">Traditional form submission using Post-Redirect-Get pattern with TempData to display toast notifications.</p>
        </a>
    </div>
</div>
